<header class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 mb-0">Productos Agregados</h1>
  <a href="/products" class="btn btn-outline-secondary btn-sm">Volver a
    Productos</a>
</header>

<ul id="lista-productos" class="list-group mb-4">
  {{#each productos}}
    <li
      class="list-group-item d-flex justify-content-between align-items-center"
      data-id="{{this._id}}"
    >
      <span>{{this.title}} — ${{this.price}}</span>
      <button
        type="button"
        class="btn btn-sm btn-danger"
        onclick="eliminarProducto('{{this._id}}')"
      >Eliminar</button>
    </li>
  {{/each}}
</ul>

<div class="card shadow-sm">
  <div class="card-body">
    <h2 class="h5">Agregar producto</h2>
    <form id="form-producto" class="row g-3">
      <div class="col-md-4">
        <label class="form-label">Título</label>
        <input
          class="form-control"
          name="title"
          placeholder="Título"
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label">Descripción</label>
        <input
          class="form-control"
          name="description"
          placeholder="Descripción"
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label">Código</label>
        <input
          class="form-control"
          name="code"
          placeholder="Código único"
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label">Precio</label>
        <input
          class="form-control"
          name="price"
          type="number"
          min="0"
          step="0.01"
          placeholder="0.00"
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label">Stock</label>
        <input
          class="form-control"
          name="stock"
          type="number"
          min="0"
          step="1"
          placeholder="0"
          required
        />
      </div>
      <div class="col-md-4">
        <label class="form-label">Categoría</label>
        <input
          class="form-control"
          name="category"
          placeholder="Categoría"
          required
        />
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-success">Agregar</button>
      </div>
    </form>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>