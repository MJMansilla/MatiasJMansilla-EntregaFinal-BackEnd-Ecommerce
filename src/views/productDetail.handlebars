<div class="card shadow-sm">
  <div class="card-body">
    <h1 class="h4">{{product.title}}</h1>
    <p class="mb-2">{{product.description}}</p>

    <div class="row g-3">
      <div class="col-6 col-md-3">
        <div class="small text-muted">Precio</div>
        <div class="fs-5 fw-semibold">${{product.price}}</div>
      </div>
      <div class="col-6 col-md-3">
        <div class="small text-muted">Categor√≠a</div>
        <div>{{product.category}}</div>
      </div>
      <div class="col-6 col-md-3">
        <div class="small text-muted">Stock</div>
        <div>{{product.stock}}</div>
      </div>
      <div class="col-6 col-md-3">
        <div class="small text-muted">Estado</div>
        <div>{{#if product.status}}Disponible{{else}}No disponible{{/if}}</div>
      </div>
    </div>

    <div class="mt-3 d-flex gap-2">
      <button
        type="button"
        onclick="addToCart('{{product._id}}')"
        class="btn btn-success"
      >Agregar al carrito</button>
      <a href="/products" class="btn btn-secondary">Volver</a>
    </div>
  </div>
</div>

<script src="/js/cart.js"></script>